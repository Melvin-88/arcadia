{
  "name": "arcadia-client-fe",
  "version": "1.0.0",
  "description": "Arcadia Game Client",
  "main": "index.tsx",
  "author": "Digicode",
  "license": "MIT",
  "scripts": {
    "dev": "npm run set-ts-node-config -- webpack-dev-server --env.ENVIRONMENT_FILE_NAME=.env.development --config webpack/webpack.config.ts",
    "build": "cross-env npm run clean && npm run set-ts-node-config -- webpack --env.ENVIRONMENT_FILE_NAME=.env --config webpack/webpack.production.config.ts --progress --profile --colors",
    "build:debug": "npm run build -- --debug",
    "serve": "http-server ./dist -p 4000",
    "clean": "rimraf dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src/ ./webpack/ ./stories/",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint ./{src,stories,.storybook}/**/*.{scss,css}",
    "stylelint:fix": "npm run stylelint -- --fix",
    "check-types": "tsc",
    "test": "jest",
    "test:update-snapshots": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "storybook": "npm run set-ts-node-config -- start-storybook -p 6006",
    "storybook:build": "npm run set-ts-node-config -- build-storybook",
    "update-i18n-keys": "i18next-scanner --config i18n/i18next-scanner.config.js",
    "set-ts-node-config": "cross-env TS_NODE_PROJECT=ts-node-config.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check-types --silent && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.2.0",
    "@reduxjs/toolkit": "^1.3.4",
    "@sentry/react": "^5.29.0",
    "@sentry/tracing": "^5.29.0",
    "@uifabric/styling": "^7.11.4",
    "@uifabric/utilities": "^7.15.8",
    "axios": "^0.19.2",
